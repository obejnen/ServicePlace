@using ServicePlace.Model.ViewModels.ProviderCategoryViewModels
@model CreateProviderCategoryViewModel

@{
    ViewBag.Title = "Category editing";
}

<div class="create-form w3-container w3-card-4">
    @using (Html.BeginForm("Edit", "ProviderCategory", FormMethod.Post))
    {
        <h2>@ViewBag.Title</h2>
        <br />
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <br />

        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "w3-input" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

        <br />
        <br />
        <input type="submit" class="w3-button w3-black w3-hover-white" value="Submit" />
        <br />
        <br />
    }
</div>