@using ServicePlace.Model.ViewModels.OrderViewModels
@using CloudinaryDotNet;
@using CloudinaryDotNet.Core;
@using CloudinaryDotNet.Actions;
@model CreateViewModel

@{
    ViewBag.Title = "Create order";
}

<link rel="stylesheet" href="~/Content/order.css" />
<script src="~/Scripts/dropzone.js"></script>
@Styles.Render("~/Content/dropzonecss")

<div class="create-form w3-container w3-card-4">
    @using (Html.BeginForm("Create", "Order", FormMethod.Post, new { @id = "order-form" }))
    {
        <h2>@ViewBag.Title</h2>
        <br />
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.LabelFor(m => m.CategoryId, "Category")
        @Html.DropDownListFor(m => m.CategoryId, Model.Categories, new { @class = "w3-select" })
        <br />
        <br />

        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "w3-input" })
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })

        <br />
        @Html.LabelFor(m => m.Body)
        @Html.TextAreaFor(m => m.Body, new { @class = "w3-input" })
        @Html.ValidationMessageFor(m => m.Body, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.Images, new { @id = "order-images" })

        <br />
        <br />
    }

    @using (Ajax.BeginForm("Upload", "Image", null
        , new AjaxOptions { HttpMethod = "POST" }
        , new { @class = "dropzone image-dropzone w3-card-4", @id = "dropzoneForm" }))
    {
        <input name="file" type="file" id="fileInput" multiple style="display: none" />
    }
    <br />
    <button onclick="submitForm()" class="w3-button w3-black w3-hover-white">Create</button>
    <br />
    <br />
</div>

<script>

    function addImage(data) {
        $("#order-images").val($("#order-images").val()+ " " + data);
    }

    $(function () {
        Dropzone.options.dropzoneForm = {
            parallelUploads: 8,
            addRemoveLinks: true,
            init: function () {
                dropzone = Dropzone.forElement("#dropzoneForm");
                dropzone.on("success",
                    function(file, response) {
                        addImage(response.url);
                    });
            }
        }
    });
    function submitForm() {
        $("#order-form").submit();
    }
</script>