@using ServicePlace.Model.ViewModels.AccountViewModels
@model LoginViewModel
@{
    ViewBag.Title = Resources.Resource.SignIn;
}

<link rel="stylesheet" href="~/Content/identity.css"/>

<div class="login-form">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "w3-container w3-card-4" }))
    {
        <h2>@ViewBag.Title.</h2>
        <br />
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.DisplayFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { @class = "w3-input" })
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })

        <br />
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "w3-input" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

        <br />
        <br />
        <input type="submit" class="w3-button w3-black w3-hover-white" value="@Resources.Resource.SignIn" />
        <br />
        <br />
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}