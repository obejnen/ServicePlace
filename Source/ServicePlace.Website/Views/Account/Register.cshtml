@using ServicePlace.Model.ViewModels.AccountViewModels
@model RegisterViewModel

@{
    ViewBag.Title = Resources.Resource.SignUp;
}

<link rel="stylesheet" href="~/Content/identity.css"/>

<div class="login-form w3-container w3-card-4">
    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "register-form" }))
    {
        <h2>@ViewBag.Title.</h2>
        <br />
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { @class = "w3-input" })
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })

        <br />

        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "w3-input" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

        <br />

        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "w3-input" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

        <br />

        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "w3-input" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

        <br />

        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "w3-input" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.Avatar, new { @id = "user-avatar" })

        <br />
        <br />
    }
    @Html.Partial("Partials/_DropzonePartial", new ViewDataDictionary{ {"Selector","user-avatar"}, {"Multiple", false }})
    <br />
    <button class="w3-button w3-black w3-hover-white" onclick="$('#register-form').submit()">
        @Resources.Resource.SignUp
    </button>
    <br />
    <br />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
