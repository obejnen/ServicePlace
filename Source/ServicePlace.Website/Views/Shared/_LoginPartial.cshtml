@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input class="w3-button w3-padding-16 w3-right" type="submit" value="Sign out" />
        @Html.ActionLink(@User.Identity.GetUserName(), "Profile", "Account", null, new { @class = "w3-button w3-padding-16 w3-right" })
    }
}
else
{
    @Html.ActionLink("Sign up", "Register", "Account", null, new { id = "registerLink", @class = "w3-button w3-padding-16 w3-right" })
    @Html.ActionLink("Sign in", "Login", "Account", null, new { id = "loginLink", @class = "w3-button w3-padding-16 w3-right" })
}
